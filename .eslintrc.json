{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-unused-vars": "error",
        "react/prop-types": 0,
        "no-console": "warn",
        "quotes": [
            "warn",
            "double"
        ],
        "jsx-quotes": [
            "error",
            "prefer-double"
        ],
        "prefer-const": "error",
        "indent": [
            "warn",
            2
        ],
        "comma-dangle": [
            "warn",
            "always-multiline"
        ],
        "semi": [
            "warn",
            "always"
        ]
    },
    "ignorePatterns": "webpack.config.js"
}